@using MenagmentSystem.ViewModel;
@model LoginViewModel;
@{
    Layout = "_Layout";
}
<style>
    .center-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 200px);
    }

    .centered-content {
        background-color: #181818;
        padding: 20px;
        border: 1px solid #ccc;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    body::-webkit-scrollbar {
        display: none;
        overflow: hidden;
        height: 100%;
    }

    body {
        height: 100%;
        overflow-y: hidden;
    }
</style>
<div class="center-container">
    <section class="ftco-section w-100 mx-auto border-1 border rounded-1 centered-content bg-black">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <h2 class="heading-section"></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-circle-o fa-5x text-primary"></span>
                        </div>
                        <h3 class="text-center mb-4 text-white">Sign In</h3>
                        <form asp-action="Login" asp-controller="Account" class="login-form">
                            <div asp-validation-summary="All">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-1" asp-for="Email" placeholder="myuser@gmail.com">
                            </div>
                            <div class="form-group mt-2">
                                <input type="password" class="form-control rounded-1" asp-for="Password" placeholder="Password">
                            </div>
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary btn-block rounded-pill">Login</button>
                            </div>
                            <div class="form-group d-md-flex justify-content-between align-items-center mt-4">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary text-white">
                                        <input type="checkbox" unchecked>
                                        <span class="checkmark text-white"></span> Remember Me
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" class="text-primary">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

