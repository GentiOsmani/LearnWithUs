@{
    Layout = "_Layout";
}
@model CourseViewModel;

<style>
    /* Custom CSS class to make the card background black */
    .bg-black-custom {
        background-color: #181818;
        color: white; /* Optionally, you can set the text color to white for better contrast */
    }

    body::-webkit-scrollbar {
        display: none;
        overflow: hidden;
        height: 100%;
    }

    body {
        height: 100%;
        overflow-y: hidden;
    }
</style>

<div class="center-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-4">
                    <div class="card-body bg-black-custom">
                        <!-- Add the custom CSS class "bg-black-custom" -->
                        <h2 class="card-title text-center">Create a Card</h2>
                        <form method="POST" asp-action="Course" asp-controller="Edit">

                            <div class="form-group">
                                <label asp-for="CourseName">Courses Name</label>
                                <input asp-for="CourseName" class="form-control" style="width: 100%;" data-bs-toggle="tooltip" data-bs-placement="left" title="Your First Name">
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="Members">Members</label>
                                <input asp-for="Members" class="form-control mx-auto" type="email" style="width: 100%;" asp-for="Email" data-bs-toggle="tooltip" data-bs-placement="right" title="Your Email Address">
                            </div>



                            <div class="d-flex justify-content-around">
                                
                                <div class="form-group">
                                    <label asp-for="CoursePrice">Price</label>
                                    <input asp-for="CoursePrice" class="form-control" style="width: 100%;" data-bs-toggle="tooltip" data-bs-placement="right" title="Your Last Name">
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="Lecturer">Lecturer</label>
                                    <input class="form-control mx-auto" style="width: 100%;" type="text" asp-for="Lecturer" data-bs-toggle="tooltip" data-bs-placement="right" title="Password should have at least one capital letter, one number and for letters ">
                                </div>
                            </div>
                            <div class="d-flex justify-content-around mb-4">

                                <div class="form-group mt-2">

                                    <label asp-for="CourseDescription">Description</label>
                                    <input asp-for="CourseDescription" class="form-control mx-auto" style="width: 100%;" data-bs-toggle="tooltip" data-bs-placement="right" title="Your Age">

                                </div>
                            </div>

                            <hr class="bg-white" />

                            <div class="d-flex justify-content-around">
                                @* <div class="form-group mt-2">
                                    <label asp-for="City">City</label>
                                    <input class="form-control mx-auto" style="width: 100%;" asp-for="City">
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="Address">Address</label>
                                    <input class="form-control mx-auto" style="width: 100%;" asp-for="Address">
                                </div> *@
                            </div>
                            <div class="text-center">
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-primary" style="margin-top: 20px;" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
