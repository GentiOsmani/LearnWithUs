                        <option disabled selected class="text-white">Zgjedh</option>
                        <option class="text-white">Ascending</option>
                        <option class="text-white">Descending</option>
                        <option class="border-top text-white">2023</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-group">
                    <label for="popularity" class="fs-6 text-white">Vijueshmëria</label>
                    <select class="form-select custom-select bg-custom text-white" id="popularity">
                        <option disabled selected class="text-white">Zgjedh</option>
                        <option class="text-white">Ascending</option>
                        <option class="text-white">Descending</option>
                        <option class="border-top text-white">2023</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-group">
                    <label for="popularity" class="fs-6 text-white">Create A Course</label>
                    <a class="nav-link text-white btn btn-outline-secondary " asp-controller="Course" asp-action="Edit">Create</a>
                </div>
            </div>
        </div>
    </div>
</section>

